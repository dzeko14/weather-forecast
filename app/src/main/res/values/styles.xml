<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CurrentWeatherForecastItemStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CurrentWeatherForecastItemStyle.Temperature" parent="CurrentWeatherForecastItemStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="WeatherForecastItemStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WeatherForecasDetailItemStyle">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
